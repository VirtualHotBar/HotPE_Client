{
  "name": "hotpe-clientn",
  "private": true,
  "version": "0.0.2",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite  --force",
    "dev-main": "tsc -w --p ./src/main",
    "dev-ele": "nodemon --watch ./dist/main/* --exec electron .",
    "build": "tsc && vite build && tsc -p ./src/main && electron-builder --x64 --dir",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "iconv-lite": "^0.6.3",
    "ini": "^4.1.1",
    "react-markdown": "^8.0.7"
  },
  "devDependencies": {
    "@douyinfe/semi-icons": "^2.39.0",
    "@douyinfe/semi-ui": "^2.51.3",
    "@icon-park/react": "^1.4.2",
    "@types/copyfiles": "^2.4.1",
    "@types/ini": "^1.3.31",
    "@types/node": "^20.3.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/react-virtualized": "^9.21.22",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "copyfiles": "^2.4.1",
    "electron": "^18.0.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.43.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "nodemon": "^2.0.22",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-virtualized": "^9.22.5",
    "react-window": "^1.8.9",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vite-plugin-react-virtualized": "^1.0.4"
  },
  "build": {
    "files": [
      "dist"
    ],
    "extraMetadata": {
      "main": "dist/main/index.js"
    },
    "productName": "HotPE Client",
    "appId": "pc",
    "copyright": "Copyright Â© 2019-Present VirtualHotBar",
    "directories": {
      "output": "dist-bin"
    },
    "win": {
      "requestedExecutionLevel": "highestAvailable",
      "icon": "./logo.ico"
    },
    "extraResources": {
      "from": "./resources/"
    }
  }
}
